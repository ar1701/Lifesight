<%- include('partials/header') -%>

<!-- Sidebar -->
<div id="sidebar">
  <div class="card mb-4">
    <div class="card-header">
      <i class="bi bi-cloud-arrow-up-fill me-2"></i> Upload File
    </div>
    <div class="card-body">
      <form action="/app/upload" method="POST" enctype="multipart/form-data">
        <div class="input-group">
          <input
            type="file"
            class="form-control"
            name="dataFile"
            accept=".csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel"
            required
          />
          <button class="btn btn-primary" type="submit">
            <i class="bi bi-upload"></i>
          </button>
        </div>
      </form>
    </div>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      <i class="bi bi-grid-3x3-gap-fill me-2"></i> Dashboards
    </div>
    <div class="card-body">
      <div class="mb-3">
        <button
          type="button"
          class="btn btn-primary btn-sm w-100"
          data-bs-toggle="modal"
          data-bs-target="#createDashboardModal"
        >
          <i class="bi bi-plus-circle me-2"></i>Create Dashboard
        </button>
      </div>
      <div class="mb-3">
        <label for="dashboardSelect" class="form-label small"
          >Select Dashboard:</label
        >
        <select id="dashboardSelect" class="form-select form-select-sm">
          <% if(dashboards && dashboards.length > 0) { %> <%
          dashboards.forEach(dashboard => { %>
          <option value="<%= dashboard._id %>"><%= dashboard.name %></option>
          <% }) %> <% } else { %>
          <option value="">No dashboards</option>
          <% } %>
        </select>
      </div>
      <div class="d-grid gap-2">
        <a href="/app/dashboards" class="btn btn-outline-secondary btn-sm">
          <i class="bi bi-list-ul me-2"></i>View All Dashboards
        </a>
        <a href="/app/marketing" class="btn btn-outline-primary btn-sm">
          <i class="bi bi-graph-up me-2"></i>Marketing Intelligence
        </a>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      <i class="bi bi-file-earmark-text-fill me-2"></i> Your Files
    </div>
    <div class="card-body">
      <div id="files" class="list-group">
        <% if(files && files.length > 0) { %> <% files.forEach(file => { %>
        <div class="file-list-item" data-file-id="<%= file._id %>">
          <div class="file-name" title="<%= file.originalName %>">
            <%= file.originalName %>
          </div>
          <div class="btn-group file-actions" role="group">
            <button
              type="button"
              class="btn btn-outline-secondary preview-btn"
              title="Preview"
            >
              <i class="bi bi-eye"></i>
            </button>
            <button
              type="button"
              class="btn btn-outline-primary select-btn"
              title="Select"
            >
              <i class="bi bi-check-circle"></i>
            </button>
            <button
              type="button"
              class="btn btn-outline-danger delete-file-btn"
              title="Delete"
            >
              <i class="bi bi-trash"></i>
            </button>
          </div>
        </div>
        <% }) %> <% } else { %>
        <p class="text-center text-muted">No files uploaded yet.</p>
        <% } %>
      </div>
    </div>
  </div>
</div>

<!-- Main Content -->
<main id="main-content">
  <div class="card mb-4">
    <div class="card-header">
      <i class="bi bi-chat-dots-fill me-2"></i> Chat with Your Data
    </div>
    <div class="card-body">
      <div id="chat-box"></div>
      <div class="input-group mt-3">
        <input
          type="text"
          id="prompt-input"
          class="form-control form-control-lg"
          placeholder="Select a file and ask a question..."
        />
        <button id="send-prompt" class="btn btn-primary">
          <i class="bi bi-send-fill"></i> Send
        </button>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      <i class="bi bi-grid-1x2-fill me-2"></i> Your Dashboard
    </div>
    <div class="card-body">
      <div id="dashboard-widgets" class="row g-4">
        <% if(widgets && widgets.length > 0) { %> <% widgets.forEach(widget => {
        %>
        <div class="col-md-6">
          <div class="card widget-container" data-widget-id="<%= widget._id %>">
            <div
              class="card-header d-flex justify-content-between align-items-center"
            >
              <span class="fw-bold">
                <% if(widget.type === 'chart') { %>
                <i class="bi bi-bar-chart-line me-2"></i>Chart <% } else { %>
                <i class="bi bi-table me-2"></i>Table <% } %>
              </span>
              <button
                type="button"
                class="btn btn-sm btn-outline-danger delete-widget-btn"
                title="Delete Widget"
              >
                <i class="bi bi-trash"></i>
              </button>
            </div>
            <div class="card-body">
              <!-- Content will be rendered by JS -->
            </div>
          </div>
        </div>
        <% }) %> <% } else { %>
        <p id="no-widgets-message" class="text-center text-muted">
          Your dashboard is empty. Generate a chart or table in the chat and add
          it here.
        </p>
        <% } %>
      </div>
    </div>
  </div>
</main>

<!-- Preview Modal -->
<div
  class="modal fade"
  id="preview-modal"
  tabindex="-1"
  aria-labelledby="previewModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="previewModalLabel">File Preview</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <div id="preview-content"></div>
      </div>
    </div>
  </div>
</div>

<!-- Create Dashboard Modal -->
<div
  class="modal fade"
  id="createDashboardModal"
  tabindex="-1"
  aria-labelledby="createDashboardModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createDashboardModalLabel">
          Create New Dashboard
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form id="createDashboardForm">
          <div class="mb-3">
            <label for="dashboardName" class="form-label">Dashboard Name</label>
            <input
              type="text"
              class="form-control"
              id="dashboardName"
              required
            />
          </div>
          <div class="mb-3">
            <label for="dashboardDescription" class="form-label"
              >Description (Optional)</label
            >
            <textarea
              class="form-control"
              id="dashboardDescription"
              rows="3"
            ></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Cancel
        </button>
        <button type="button" class="btn btn-primary" id="createDashboardBtn">
          Create Dashboard
        </button>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>

<script>
  window.savedWidgets = <%- JSON.stringify(widgets || []) %>;
</script>
